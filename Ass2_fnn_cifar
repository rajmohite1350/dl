import tensorflow as tf
from tensorflow.keras.layers import Dense, Flatten
from tensorflow.keras.models import Sequential
from tensorflow.keras.datasets import cifar10
import numpy as np
import matplotlib.pyplot as plt


# a. Load and preprocess data
(x_train, y_train), (x_test, y_test) = cifar10.load_data()
x_train = x_train / 255
x_test = x_test / 255

class_names = ['airplane', 'automobile', 'bird', 'cat', 'deer',
               'dog', 'frog', 'horse', 'ship', 'truck']


# b. Define model architecture
model = Sequential([
    Flatten(input_shape=(32, 32, 3)),
    Dense(50, activation='relu'),
    Dense(30, activation='relu'),
    Dense(10, activation='softmax')
])


# c. Compile the model
model.compile(
    optimizer='sgd',
    loss='sparse_categorical_crossentropy',
    metrics=['accuracy']
)


# d. Train the model
model.fit(x_train, y_train, epochs=15, validation_data=(x_test, y_test), verbose=0)


# e. Evaluate the model
test_loss, test_acc = model.evaluate(x_test, y_test)
print(f"{test_acc*100:.2f}%")


# f. Make predictions
prediction = model.predict(x_test[:10])
predict_labels = np.argmax(prediction, axis=1)
actual = y_test[:10].flatten()


# g. Plot predicted vs actual images
plt.figure(figsize=(12, 6))

for i in range(10):
    plt.subplot(2, 5, i + 1)
    plt.imshow(x_test[i])
    pred_name = class_names[predict_labels[i]]
    actual_name = class_names[actual[i]]
    plt.title(f"Pred: {pred_name}\nActual: {actual_name}")
    plt.axis('off')

plt.tight_layout()
plt.show()
